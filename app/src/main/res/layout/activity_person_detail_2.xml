<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_bg"
    android:orientation="vertical"
    tools:context=".view.activity.PersonDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10">

                <TextView
                    android:id="@+id/persondetail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textSize_30"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创建时间:"
                    android:textColor="@color/icon"
                    android:textSize="@dimen/textSize_24" />

                <TextView
                    android:id="@+id/persondetail_stunum"
                    android:layout_width="@dimen/height_300"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textSize_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone"
                    android:textColor="@color/icon"
                    android:textSize="@dimen/textSize_24" />

                <TextView
                    android:id="@+id/persondetail_telephone"
                    android:layout_width="@dimen/width_200"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textSize_24" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="50dp">

            <ImageView
                android:id="@+id/persondetail_camera"
                android:layout_width="@dimen/width_100"
                android:layout_height="@dimen/height_100"
                android:src="@mipmap/icon_camera" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/icon"
        android:layout_margin="@dimen/margin_50"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/personDetail_create"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_100"
            android:layout_weight="1"
            android:background="@drawable/card_bg"
            android:drawableTop="@drawable/persondetail_addface"
            android:gravity="center"
            android:text="添加人脸"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textSize_26" />

        <TextView
            android:id="@+id/personDetail_delete"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_100"
            android:layout_weight="1"
            android:background="@drawable/card_bg"
            android:drawableTop="@drawable/persondetail_delete"
            android:gravity="center"
            android:text="删除人脸"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textSize_26" />

        <TextView
            android:id="@+id/personDetail_chongzhi"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_100"
            android:layout_weight="1"
            android:background="@drawable/card_bg"
            android:drawableTop="@drawable/persondetail_cz"
            android:gravity="center"
            android:text="充值"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textSize_26" />


        <TextView
            android:id="@+id/personDetail_xiaohu"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_100"
            android:layout_weight="1"
            android:background="@drawable/card_bg"
            android:drawableTop="@drawable/persondetail_zx"
            android:gravity="center"
            android:text="注销"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textSize_26" />
    </LinearLayout>


</LinearLayout>