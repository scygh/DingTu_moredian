<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    tools:context=".view.activity.RecordActivity">

    <TextView
        android:id="@+id/record_tv_voucher"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="@dimen/margin_50"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="充值报表"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_26" />

    <TextView
        android:id="@+id/record_tv_consume"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/margin_50"
        android:layout_marginBottom="@dimen/margin_50"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="消费报表"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_26" />

    <TextView
        android:id="@+id/record_tv_sevendays"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="@dimen/margin_50"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="7日报表"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_26" />
</LinearLayout>